<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Proyecto FFXIV</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav>
            <a asp-controller="Home" asp-action="Index">Inicio</a>
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-controller="Calendar" asp-action="Index">Calendario</a>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-controller="Calendar" asp-action="AdminCalendar">Administrar Calendario</a>
                }
                <form asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit">Cerrar Sesión</button>
                </form>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login">Iniciar Sesión</a>
                <a asp-controller="Account" asp-action="Register">Registrarse</a>
            }
        </nav>
    </header>
    <main>
        @RenderBody()
    </main>
</body>
</html>